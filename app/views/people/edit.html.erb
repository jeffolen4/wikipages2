<div class="container">
  <div class="row">

    <h1>Editing Person</h1>

    <%= render 'form' %>

    <%= link_to 'Show', @person %> |
    <%= link_to 'Back', people_path %>

    <% if @people.addresses.count > 0 %>
        <h1>Listing Addresses</h1>

        <table class="table table-hover">
          <thead>
            <tr>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @people.addresses.each do |address| %>
            <tr>
              <td><%= link_to 'Show', person_address(address) %></td>
              <td><%= link_to 'Edit', edit_person_address(address) %></td>
              <td><%= link_to 'Destroy', person_address(address), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <% end %>
  </div>
</div>
