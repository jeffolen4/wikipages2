<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <h1>Listing Addresses for <%= @person_name %></h1>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Address line 1</th>
          <th>Address line 2</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
          <th>Person</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.address_line_1 %></td>
          <td><%= address.address_line_2 %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.zip %></td>
          <td><%= address.person.first_name %> <%= address.person.last_name %></td>
          <td><%= link_to 'Show', address %></td>
          <td><%= link_to 'Edit', edit_address_path(address) %></td>
          <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Address', new_address_path %>

  </div>
</div>
